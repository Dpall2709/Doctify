<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignUpEmployer">

    <ImageView
        android:id="@+id/signUpEmpArrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        app:tint="@color/white"
        android:background="@drawable/gray_arrow"
        app:srcCompat="?attr/homeAsUpIndicator" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="305dp"
        android:layout_marginTop="-32dp"
        app:srcCompat="@drawable/curve" />
    <TextView
        android:layout_width="127dp"
        android:layout_height="42dp"
        android:text="Sign Up"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="28dp"
        android:textStyle="normal"
        android:gravity="center"
        android:fontFamily="@font/poppins"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="190dp"
        android:layout_height="21dp"
        android:text="Choose your Account type"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="55dp"
        android:textColor="@color/choice_color"
        android:fontFamily="@font/poppins"
        android:textSize="14sp"
        android:textStyle="normal"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="600dp"
        android:background="@drawable/rectangle_login"
        android:elevation="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="253dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/choice_can"
            android:elevation="5dp">


            <TextView
                android:id="@+id/signUpEmpCand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Candidate"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/poppins"
                android:textColor="@color/emp_gray"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="25dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="28dp"
                android:background="@color/borer_stroke"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employer"
                android:textSize="14sp"
                android:textStyle="normal"
                android:fontFamily="@font/poppins"
                android:textColor="@color/text_red"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="25dp"/>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etle"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="Username "

            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark">




            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpEmpUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/email_shape"

                />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etle1"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:hint="Email"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"
            android:inputType="textEmailAddress"
            >




            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/signUpEmpEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/email_vector"

                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpEmpPassword"
                android:drawableRight="@drawable/img_password"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Confirm password"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:drawableRight="@drawable/confirm_vector"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Phone Number"
            android:inputType="phone"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpEmpNumber"
                android:drawableRight="@drawable/phone_vector"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Organization Name"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signUpEmpOrName"
                android:drawableRight="@drawable/org_vector"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:hint="Requirements"
            android:inputType="text"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:boxStrokeColor="@color/gray"
            app:hintTextColor="@color/gray_dark"


            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:id="@+id/signUpEmpReq"
                />
        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:id="@+id/btnEmpSignUp"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="Sign Up"
            android:background="@drawable/btn_uplod"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/poppins"
                android:text="Do not have an Account?"
                android:textColor="@color/gray_dark"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/signUpEmpLogIn"
                android:layout_width="76dp"
                android:layout_height="24dp"
                android:fontFamily="@font/poppins"
                android:text="Log In"
                android:textColor="@color/text_blue"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_marginLeft="4dp"

                />


        </LinearLayout>




    </LinearLayout>



</RelativeLayout>