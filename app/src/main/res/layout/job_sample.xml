<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="111.98dp"
    android:layout_height="111.98dp"
    android:orientation="vertical"
    android:layout_marginLeft="17.92dp"


    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="1dp"
        android:background="@drawable/job_sample_back"


        app:cardCornerRadius="10dp"
        app:cardMaxElevation="5dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50.89dp"
            android:layout_height="50.89dp"
            android:layout_marginLeft="31.28dp"
            android:layout_marginTop="17.33dp"
            android:layout_marginRight="29.8dp"
            app:srcCompat="@drawable/ganaecologist" />


        <TextView
            android:id="@+id/medName"
            android:layout_width="75dp"
            android:layout_height="13dp"
            android:layout_marginLeft="18.26dp"
            android:layout_marginTop="78.33dp"
            android:fontFamily="@font/poppins"
            android:gravity="center"
            android:text="Gynaecology"
            android:textColor="#000000"
            android:textSize="10sp" />
    </androidx.cardview.widget.CardView>


</LinearLayout>